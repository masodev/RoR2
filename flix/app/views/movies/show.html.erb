  <article>
    <header>
      <h2><%= @movie.title %></h2>
    </header>
      <h3>Cast</h3>
        <p>
          <%= @movie.cast %>
        </p>

      <h3>Director</h3> 
        <p>
          <%= @movie.director %>
        </p>

      <h3>Duration</h3>
        <p>
          <%= @movie.duration %>
        </p>
      <h3>Image</h3>
        <%= image_tag(@movie.image_file_name) %>
        <p>
          <%= @movie.description %>
      </p>
    <table>
      <tr>
        <th>Released:</th>
        <td><%= @movie.released_on %>
          <%=time_ago_in_words(@movie.released_on) %> ago 
        </td>
      </tr>
      <tr>
        <th>Rating:</th>
        <td><%= @movie.rating %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= format_total_gross(@movie) %></td>
      </tr>
    </table>
  </article>
<nav>
  <%= link_to "All Movies", movies_path %> |
  <%= link_to "Edit", edit_movie_path(@movie) %> |
  <%= link_to "Delete", movie_path(@movie), method: :delete, data: { confirm: 'Are you sure?' } %>
</nav>